{
  "main": "index.js",
  "name": "@naturacosmeticos/sonar-nodejs-plugin",
  "author": "Natura Cosm√©ticos <TDDAArquitetura@natura.net>",
  "version": "1.0.0",
  "devDependencies": {
    "@naturacosmeticos/eslint-config-natura": "^1.0.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-node": "^1.0.3",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.3.0",
    "eslint-plugin-import": "^2.13.0",
    "faker": "^4.1.0",
    "husky": "^1.0.0-rc.13",
    "mocha": "^5.2.0",
    "nyc": "^11.9.0",
    "sinon": "^7.1.1"
  },
  "bin": {
    "sonar-nodejs": "./index.js"
  },
  "files": [
    "/src",
    "index.js"
  ],
  "scripts": {
    "docs": "./node_modules/.bin/esdoc -c .esdoc.json",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint --fix src/ test/",
    "test": "NODE_PATH=src:test mocha --recursive",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "NODE_PATH=src:test nyc mocha --recursive",
    "package": "bash package.sh"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "per-file": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "report-dir": "./coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run lint && npm test"
    }
  },
  "dependencies": {
    "chai": "^4.2.0",
    "commander": "^2.20.0",
    "cost-of-modules": "^1.0.1",
    "fs-extra": "^8.0.1",
    "get-stream": "^5.1.0",
    "nock": "^10.0.6",
    "ora": "^3.4.0",
    "request-promise": "^4.2.4",
    "sync-exec": "^0.6.2"
  },
  "homepage": "https://github.com/natura-cosmeticos/sonar-nodejs-plugin#readme",
  "bugs": "https://github.com/natura-cosmeticos/sonar-nodejs-plugin/issues",
  "keywords": [
    "sonar",
    "nodejs"
  ],
  "license": "MIT"
}
